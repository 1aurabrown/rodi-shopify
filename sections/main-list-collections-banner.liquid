<section class="bg-violet-svg text-white" >
  <div class="py-8 px-5 md:px-14 md:pb-10 md:pt-14 relative">

    <h1 class="h4 md:h3 lg:h2 xl:h1 max-w-sm md:max-w-lg lg:max-w-xl xl:max-w-2xl">
      {{ section.settings.heading }}
    </h1>

    <p class="body-md-b md:body-lg-b mt-3 md:mt-3 md:body-lg max-w-sm lg:max-w-lg">
      {{ section.settings.text }}
    </p>

  </div>

</section>

{% schema %}
{
  "name": "List Collections Hero",
  "settings": [
    {
      "label": "Heading",
      "id": "heading",
      "type": "text",
      "default": "List Collections Heading"
    },
    {
      "label": "Text",
      "id": "text",
      "type": "textarea",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor."
    }
  ]
}
{% endschema %}
