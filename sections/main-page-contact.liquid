{% style %}
  .page-body p + p {
    margin-top: 0.625em;
  }

  .section-main-page-contact {
    min-height: var(--screen-less-header);
  }
{% endstyle %}

{% comment %}css-purge shopify-challenge__container{% endcomment %}

<div class="bg-pink-svg section-main-page-contact px-5 py-10 md:px-14 md:py-25 flex flex-col items-center justify-center">
  <div class="mx-auto max-w-[500px]">
      {%- if form.posted_successfully? -%}
        <div class="mb-8 md:mb-10 text-center h6" tabindex="-1" autofocus>{{ 'templates.contact.form.post_success' | t }}</div>
      {%- elsif form.errors -%}
        <div class="mb-8 md:mb-10 text-center ">
          <h2 role="alert" tabindex="-1" autofocus>{{ 'templates.contact.form.error_heading' | t }}</h2>
          <div>
            {{ form.errors | default_errors }}
          </div>
      {%- endif -%}

    <h1 class="h4 text-center">{{ page.title }}</h1>
    <div class="mt-8 md:mt-10 page-body body-md-b">
      <div>{{ page.content }}</div>
      {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}

        <div class="mt-8 md:mt-10 space-y-10">
          <div class="space-y-4">
            <div class="md:flex space-y-4 md:space-y-0">
              <div class="name md:flex-1 md:mr-2">
                <input class="rounded-lg border border border-blue placeholder-blue pt-[13px] pb-[11px] w-full px-5 placeholder:text-blue" placeholder="Name" type="text" name="contact[name]" />
              </div>

              <div class="phone md:flex-1 md:ml-2">

                <input class="rounded-lg border border-blue placeholder-blue pt-[13px] pb-[11px] w-full px-5 placeholder:text-blue" placeholder="Phone" type="phone" name="contact[phone]" />
              </div>
            </div>

            <div class="email">
              <input
                aria-required="true"
                required
                class="rounded-lg border border-blue placeholder-blue pt-[13px] pb-[11px] w-full px-5 placeholder:text-blue"
                placeholder="Email"
                type="email"
                name="contact[email]" />
            </div>

            <div class="message">

              <textarea class="block rounded-lg border border-blue placeholder-blue pt-[13px] pb-[11px] w-full px-5 placeholder:text-blue h-[236px] md:h-[175px]" placeholder="Message" name="contact[body]"></textarea>
            </div>
          </div>
        </div>
        <div class="submit mt-8">
          <button type="submit" class="button w-full"><span class="text-rainbow">Send</span></button>
        </div>
      {% endform %}
    </div>
  </div>
</div>
