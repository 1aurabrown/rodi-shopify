<link rel="stylesheet" href="{{ 'section-header.css' | asset_url }}" media="print" onload="this.media='all'">
{{ 'section-header.css' | asset_url | stylesheet_tag }}
<div class="">
  <header class="header h-header padding-x py-4 z-20 {% if template == 'index' %}{% if section.settings.fullbleed_mobile %}absolute top-0 w-full left-0 right-0 {% unless section.settings.fullbleed_desktop %}md:static{% endunless %}{% elsif section.settings.fullbleed_desktop%}md:absolute md:top-0 md:w-full md:left-0 md:right-0{% endif %}{% else %}bg-transparent{% endif %} flex justify-between sm:justify-start items-end">

    {%- if request.page_type == 'index' -%}
      <h1>
    {%- endif -%}
        <a href="{{ routes.root_url }}" title="{{ shop.name }}" class="block ">
          {% render 'logo.svg', class: 'w-20 sm:w-[9.375rem]' %}
        </a>
    {%- if request.page_type == 'index' -%}
      </h1>
    {%- endif -%}

    <div class="ml-8 -mb-thin">
        <nav>
          <ul class="flex space-x-5 sm:space-x-7 justify-end" role="list">
            {%- if section.settings.menu != blank -%}
              {%- for link in section.settings.menu.links -%}
                <li>
                  <a title="{{ link.title }}" href="{{ link.url }}" class="text-link hover:underline uppercase{% if link.current or link.active %} underline{% endif %}" {% if link.current %}aria-current="page"{% endif %}>
                    <span>{{ link.title | escape }}</span>
                  </a>
                </li>
              {%- endfor -%}
            {%- endif -%}
            {%- if shop.customer_accounts_enabled -%}
              <li>
                <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="text-link hover:underline uppercase{% if link.current or link.active %} underline{% endif %}" {% if link.current %}aria-current="page"{% endif %}>
                {% render 'icon-account' %}
                  <span class="sr-only">
                    {%- liquid
                      if customer
                        echo 'customer.account_fallback' | t
                      else
                        echo 'customer.log_in' | t
                      endif
                    -%}
                  </span>
                </a>
              </li>
            {%- endif -%}

            <li>
              {%- render "cart-button" -%}
            </li>
          </ul>
        </nav>
    </div>
  </header>
</div>

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tiktok_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}


{% schema %}
{
  "name": "t:sections.header.name",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "t:sections.header.settings.logo"
    },
    {
      "type": "checkbox",
      "id": "fullbleed_desktop",
      "default": false,
      "label": "Overlap with homempage image on desktop"
    },
    {
      "type": "checkbox",
      "id": "fullbleed_mobile",
      "default": false,
      "label": "Overlap with homempage image on mobile"
    }
  ]
}
{% endschema %}
