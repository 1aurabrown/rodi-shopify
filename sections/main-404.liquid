<div class="h-screen-less-announcement text-center flex flex-col justify-center items-center">
  <h1 class="uppercase">
    {{ section.settings.heading }}
  </h1>
  <p class="text-paragraph mt-3">
    {{ section.settings.body | newline_to_br }}
  </p>
  <a href="{{ routes.collections_url }}" class="text-link block mt-5 md:mt-15">
    {{ section.settings.cta }}
  </a>
</div>


{% schema %}
{
  "name": "t:sections.newsletter.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "id": "heading",
      "label": "Heading",
      "type": "text",
      "default": "Oops!"
    },
    {
      "id": "body",
      "label": "Body",
      "type": "textarea",
      "default": "The page you were looking for couldn't be found."
    },
    {
      "id": "cta",
      "label": "Button Text",
      "type": "text",
      "default": "Continue Shopping"
    }
  ]
}
{% endschema %}