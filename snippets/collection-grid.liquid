<div class="collection-grid">
  <div class="grid grid-cols-2 grid-flow-dense md:grid-cols-12 gap-x-gutter-sm gap-y-10">

    {% for product in collection.products limit: limit %}
      {%- render 'product-card', class: "md:col-span-4 lg:col-span-3", collection: collection, section: section, card_product: product -%}
    {% endfor %}

    {% if show_image and collection.image %}
      <div class='md:row-start-1 col-start-1 col-span-2 md:col-span-7 md:row-span-2 md:col-start-6 lg:col-span-5 lg:col-start-8 relative'>
        {% render 'image', image: collection.image, use_padding: true, sizes: "100vw, (min-width: 768px) 50vw" %}
      </div>
    {% endif %}
  </div>
</div>