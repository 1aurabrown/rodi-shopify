{% layout 'password' %}
<div class="max-w-xs mx-auto w-full h-[100vh] text-center flex items-center">
  <div class=" w-full">
    <h1 id="DialogHeading" class="h5">
      {{ 'general.password_page.login_form_heading' | t }}
    </h1>
    {%- form 'storefront_password', class: 'password-form mt-8' -%}
      <div class="password-field field{% if form.errors %} password-field--error{% endif %}">
        <input
          type="password"
          name="password"
          id="Password"
          class="bg-transparent autofill:bg-transparent block w-full p-1 text-black placeholder-black text-center border border-black bg-white"
          autocomplete="current-password"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="PasswordLoginForm-password-error"
          {%- endif -%}
          placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
        >
        <label class="block sr-only" for="{{ 'general.password_page.login_form_password_label' | t }}">{{ 'general.password_page.login_form_password_placeholder' | t }}</label>
        {%- if form.errors -%}
          <div id="PasswordLoginForm-password-error" class="mt-1" role="status">
            <span class="sr-only">{{ 'accessibility.error' | t }}</span>
            <span class="w-5 align-middle inline-block mr-1">{% render 'icon-error' %}</span><span class="align-middle">{{ 'general.password_page.login_form_error' | t }}</span>
          </div>
        {%- endif -%}
      </div>
      <button name="commit" class="mt-3 button button--reverse">
        {{ 'general.password_page.login_form_submit' | t }}
      </button>
    {%- endform -%}
  </div>
</div>